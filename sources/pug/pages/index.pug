block variables
  - pageName = 'AsyncAPI online conference'

block page
  include ../sections/_section-swiper-slider-modern

  // Section First-ever AsyncAPI Conference
  section.section.section-lg.bg-default.wow.fadeIn
    .container
      .row.row-30.justify-content-center
        .col-md-10.col-lg-6.col-xl-5
          h6 About the event
          h3.heading-lg-postfix-15 First-ever AsyncAPI conference
          p It all started like a crazy idea. Since we're all confined at home due to the coronavirus pandemic, why not organizing a fully-remote online conference to meet each other and have some fun? We asked the community and the response was overwhelmingly positive. We had no choice! Time for some action!
          // List Inline
          ul.list-inline.list-inline-xl
            li
              .unit
                .unit-left: +svg-icon(`euro`)(class='svg-icon-sm svg-icon-primary' )
                .unit-body
                  h5 Price
                  p Free
            li
              .unit
                .unit-left: +svg-icon(`earth-globe`)(class='svg-icon-sm svg-icon-primary')
                .unit-body
                  h5 Where
                  p Online
            li
              .unit
                .unit-left: +svg-icon(`small-calendar`)(class='svg-icon-sm svg-icon-primary' )
                .unit-body
                  h5 When
                  p: time(datetime='2020-04-22') April 22, 2020
        .col-md-10.col-lg-6.col-xl-7.text-md-right
          // Image Box
          .images-box
            .images-box-item-right
              .wow.fadeScale
                +img('light-world-polygon.png')

  // Section Who Is Speaking
  +parallax({
    img:        'bg-parallax-02-1894x1950.jpg',
    innerClass: 'section-lg context-dark text-center'
  }).section
    .container
      h6.text-secondary Join us
      h3 Want to speak?

      .group
        a.button.button-primary.box-with-triangle-right.wow.fadeScale( href='https://forms.gle/tntZP33tJwPiECKP8' target='_blank' data-triangle=".button-overlay" )
          span Submit your talk
          span.button-overlay
  
