{
  "name": "my-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,mdx}\"",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:e2e:headless": "cypress run --headless",
    "test:e2e:record": "cypress run --record",
    "test:e2e:parallel": "cypress run --parallel",
    "clean": "rm -rf .next out dist coverage cypress/videos cypress/screenshots",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "prebuild": "npm run type-check",
    "predev": "npm run lint",
    "validate": "npm run lint && npm run type-check && npm run format:check",
    "ci": "npm run validate && npm run test:e2e:headless && npm run build",
    "analyze": "ANALYZE=true npm run build",
    "export": "next export",
    "generate:assets": "echo \"No assets to configure\"",
    "test": "echo \"No tests configured yet\"",
    "release": "echo \"No release to npm for this project\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@googleapis/sheets": "^7.0.0",
    "axios": "^1.8.2",
    "net": "^1.0.2",
    "next": "^15.2.4",
    "next-on-netlify": "^3.0.1",
    "nodemailer": "^6.9.13",
    "react": "^18.2.1",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.1",
    "react-ga": "^3.3.1",
    "react-hot-toast": "^2.4.1",
    "react-responsive": "^9.0.0",
    "react-select": "^5.7.5",
    "react-slick": "^0.29.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.17",
    "@types/react-dom": "^19.1.6",
    "@types/react-slick": "^0.23.13",
    "autoprefixer": "^10.4.7",
    "cypress": "^13.11.0",
    "eslint": "8.15.0",
    "eslint-config-next": "13.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "postcss": "^8.4.31",
    "prettier": "^3.5.3",
    "tailwindcss": "^3.0.24",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "tsc --noEmit --skipLibCheck"
    ],
    "*.{json,css,md,mdx}": [
      "prettier --write"
    ]
  }
}
